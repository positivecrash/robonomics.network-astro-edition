---
import ModelRiskV from '../3dmodels/Server.astro';
import ModelSwitch from '../3dmodels/Switch.astro';
import ModelAltruist from '../3dmodels/Altruist.astro';

// images
import { Image } from 'astro:assets';
import Tamagotchi from "../../assets/images/hardware-2025/hikikomori.webp"
import EnergyMonitor from "../../assets/images/hardware-2025/energy-monitor.webp"

// styles
import '../../assets/styles/components/3dmodels.css'

// data

import items from '../../data/devices.js'


---


<section class="products">
  {items.products.map((product, i) => (
    <article class="product">
      <h2>
        {product.titleLink ? (
          <a href={product.titleLink}>{product.title}</a>
        ) : (
          <span>{product.title}</span>
        )}
      </h2>
      {product.text && <p  set:html={product.text}></p>}
      {/* {product.cases && (
          <h5>Use cases:</h5>
          <p>{product.cases}</p>
      )} */}
      <div class="product-picture">
        {product.code === 'altruist' && <ModelAltruist />}
        {product.code === 'server' && (
            <ModelRiskV classList="product-picture-server" />
            <ModelSwitch classList="product-picture-switch" />
        )}
        {product.code === 'hikikomori' && (
          <Image
            src={Tamagotchi}
            alt={`${product.title} picture`}
            class="product-picture--hikikomori"
          />
        )}
        {product.code === 'energy-monitor' && (
          <Image
            class="product-picture--energy-monitor"
            src={EnergyMonitor}
            alt={`${product.title} picture`}
          />
        )} 
        {product.titleLink && (
          <a href={product.titleLink} class="link-cover"></a>
        )}
      </div>
    </article>
  ))}
</section>

<section class="unitree">
  <div>
    <img src="/src/assets/images/unitree-g1/unitree-g1-hello.webp" alt="Unitree G1 Humanoid Robot image" />
    <a href="/devices/rent-unitree-humanoid" class="link-cover"></a>
  </div>

  <div>
    <div class="label">Special offer</div>
    <h2><a href="/devices/rent-unitree-humanoid" target="_blank" aria-label="go rent Unitree G1 Humanoid Robot">Unitree G1 Humanoid Robot</a></h2>
    <h3>Rent in California, USA</h3>
    <p>Get exclusive access to one of the first commercially available humanoid robots. Flexible rental options for research, programming and entertainment needs.</p>
  </div>
</section>

<style>
  .product-picture .product-picture--energy-monitor {
    max-width: 540px;
    width: 100%;
    display: block;
    margin: 0 auto;
  }

  .product-picture .product-picture--hikikomori {
    max-width: 240px;
    width: 100%;
    display: block;
    margin: 0 auto;
  }

  
</style>


