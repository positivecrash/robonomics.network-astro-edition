---
// components
import Layout from '../layouts/Layout.astro'

// images
import { Image } from 'astro:assets';
import AITheme from '../assets/images/themes/ai-theme.png';
import BWTheme from '../assets/images/themes/black-and-white-theme.png';
import DarkTheme from '../assets/images/themes/dark-theme.png';
import NeonTheme from '../assets/images/themes/neon-theme.png';
import NeonGreenTheme from '../assets/images/themes/neon-green-theme.png';
import RobonomicsTheme from '../assets/images/themes/robonomics-theme.png';
---

<Layout
  title = "Home assistant themes"
  description = "Customize your Home Assistant with our free to use themes. Follow the instructions for installation on Github."
  ogImage = "/website_cover_themes.png"
>

<section class="section themes__banner section__blue blue-banner">
  <div class="devices__main-title title-with-bg">
    <h1><span>Home assistant themes</span></h1>
  </div>

  <div class="blue-banner-layout themes__banner-layout layout layout__content">
      <img class="themes__banner-img" aria-hidden="true" alt=""  src="/src/assets/images/themes/themes-banner.png"/>
    <div class="themes-banner-content">
      <p class="blue-banner__text">Customize your Home Assistant with our free to use themes. Follow the instructions for installation on <u>Github</u></p>
      <img aria-hidden="true" alt="" src="/src/assets/images/logos-and-assets/logo-banner-text.svg" />
    </div>
  </div>
</section>

<section class="themes">
  <div class="layout layout__mid grid-2">
    <a href="https://github.com/airalab/home-assistant-themes" target="_blank" aria-label="check robonomics theme for home assistant"><Image class="themes__banner-img" aria-hidden="true" alt="" src={RobonomicsTheme}/></a>
    <a href="https://github.com/airalab/home-assistant-themes" target="_blank" aria-label="check black and white theme for home assistant"><Image class="themes__banner-img" aria-hidden="true" alt="" src={BWTheme}/></a>
    <a href="https://github.com/airalab/home-assistant-themes" target="_blank" aria-label="check neon theme for home assistant"><Image class="themes__banner-img" aria-hidden="true" alt="" src={NeonTheme}/></a>
    <a href="https://github.com/airalab/home-assistant-themes" target="_blank" aria-label="check dark theme for home assistant"><Image class="themes__banner-img" aria-hidden="true" alt="" src={DarkTheme}/></a>
    <a href="https://github.com/airalab/home-assistant-themes" target="_blank" aria-label="check neon green theme for home assistant"><Image class="themes__banner-img" aria-hidden="true" alt="" src={NeonGreenTheme}/></a>
    <a href="https://github.com/airalab/home-assistant-themes" target="_blank" aria-label="check ai theme for home assistant"><Image class="themes__banner-img" aria-hidden="true" alt="" src={AITheme}/></a>
  </div>
</section>
</Layout>


<style>

  img {
    height: unset;
  }

  .section__blue {
    margin-top: 0;
  }

  @media screen and (max-width: 800px) {
    .grid-2 {
      grid-template-columns: 1fr;
    }
  }

  @media screen and (max-width: 650px) {
    .themes__banner-layout {
      grid-template-columns: 1fr;
    }
  }
</style>